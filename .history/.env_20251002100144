# Token de verificação do webhook (você define qualquer string e repete no painel Meta)
VERIFY_TOKEN=minha_chave_secreta

# Token Bearer da WhatsApp Cloud API (pega no Meta > WhatsApp > Configuration)
WHATSAPP_TOKEN=EAA...

# ID do número de WhatsApp Business (não é o telefone! é o ID que o Meta mostra)
PHONE_NUMBER_ID=123456789012345

# Opcional: número de teste para a rota /send-test (em E.164)
TEST_TO=+55659XXXXXXXX
PORT=3000
